<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import jscolendar.components.popup.admin.Edition?>
<fx:root xmlns:fx="http://javafx.com/fxml"
         xmlns="http://javafx.com/javafx"
         type="jscolendar.components.popup.admin.Edition" stylesheets="stylesPoppup.css">
    <VBox fx:id="body">
        <Label fx:id="title" styleClass="poppupTitle"/>

        <VBox fx:id="prenom">
            <Label fx:id="emptyFieldPrenom" styleClass="errorEmptyField">Champ vide</Label>
            <StackPane fx:id="prenomLayout" styleClass="popupStack">
                <Label fx:id="prenomLabel" styleClass="popopLabelField" text="Prénom"/>
                <JFXTextField fx:id="prenomInput" onMouseClicked="#fieldPrenom" promptText="Prénom"
                              onKeyPressed="#fieldPrenom" styleClass="popupInputField"/>
                <TextField fx:id="emptyPrenomInput" onMouseClicked="#fieldPrenom" promptText="Prénom"
                           onKeyPressed="#fieldPrenom" styleClass="popupEmptyInputField"/>
            </StackPane>
        </VBox>
        <VBox fx:id="nom">
            <Label fx:id="emptyFieldNom" styleClass="errorEmptyField">Champ vide</Label>
            <StackPane fx:id="nomLayout" styleClass="popupStack">
                <Label fx:id="nomLabel" styleClass="popopLabelField" text="Nom"/>
                <JFXTextField fx:id="nomInput" styleClass="popupInputField" onMouseClicked="#fieldNom"
                              onKeyPressed="#fieldNom" promptText="Nom"/>
                <TextField fx:id="emptyNomInput" styleClass="popupEmptyInputField" promptText="Nom"
                           onMouseClicked="#fieldNom"
                           onKeyPressed="#fieldNom"/>
            </StackPane>
        </VBox>
        <VBox fx:id="classe">
            <Label fx:id="emptyFieldClasse" styleClass="errorEmptyField">Champ vide</Label>
            <StackPane fx:id="classeLayout" styleClass="popupStack">
                <Label fx:id="classeLabel" styleClass="popopLabelField" text="Classe"/>
                <JFXTextField fx:id="classeInput" styleClass="popupInputField" promptText="Classe"
                              onKeyPressed="#fieldClasse" onMouseClicked="#fieldClasse"/>
                <TextField fx:id="emptyClasseInupt" styleClass="popupEmptyInputField" promptText="Classe"
                           onKeyPressed="#fieldClasse" onMouseClicked="#fieldClasse"/>
            </StackPane>
        </VBox>
        <VBox fx:id="mdp">
            <Label fx:id="emptyFieldMdp"></Label>
            <StackPane fx:id="mdpLayout" styleClass="popupStack">
                <Label styleClass="popopLabelField" fx:id="mdpLabel">Mot de passe</Label>
                <JFXPasswordField fx:id="mdpInput" styleClass="popupInputField" onMouseClicked="#fieldMDP"
                                  onKeyPressed="#fieldMDP"/>
                <JFXTextField fx:id="mdpShowInput" styleClass="popupInputField" onMouseClicked="#fieldMDP"
                              onKeyPressed="#fieldMDP"/>
                <TextField fx:id="emptyMdpInput" promptText="Mot de passe" styleClass="popupEmptyInputField"
                           onMouseClicked="#fieldMDP" onKeyPressed="#fieldMDP"/>
                <Button styleClass="popupShowButton" fx:id="show" onMouseClicked="#showButton"/>
            </StackPane>
        </VBox>
        <Label fx:id="msg"/>
        <HBox fx:id="buttons">
            <JFXButton fx:id="annuler" styleClass="poppupButton" onMouseClicked="#annul"/>
            <JFXButton fx:id="save" styleClass="poppupButton" onMouseClicked="#saveButton"/>
        </HBox>
    </VBox>

</fx:root>
