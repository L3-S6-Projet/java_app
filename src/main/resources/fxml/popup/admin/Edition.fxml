<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import jscolendar.components.popup.admin.Edition?>
<fx:root xmlns:fx="http://javafx.com/fxml"
         xmlns="http://javafx.com/javafx"
         type="jscolendar.components.popup.admin.Edition" stylesheets="stylesPoppup.css">
    <VBox fx:id="body">
        <Label fx:id="title" styleClass="poppupTitle"/>
        <VBox fx:id="prenom">
            <Label fx:id="emptyFieldPrenom" styleClass="errorEmptyField">Champ vide</Label>
            <StackPane fx:id="prenomLayout" styleClass="stackField">
                <Label fx:id="prenomLabel" styleClass="fieldLabelpop" text="Prénom"/>
                <JFXTextField fx:id="prenomInput" onMouseClicked="#fieldPrenom" promptText="Prénom"
                              onKeyPressed="#fieldPrenom" styleClass="labelInput1"/>
                <TextField fx:id="emptyPrenomInput" onMouseClicked="#fieldPrenom" promptText="Prénom"
                           onKeyPressed="#fieldPrenom" styleClass="emptyInputpop"/>
            </StackPane>
        </VBox>
        <VBox fx:id="nom">
            <Label fx:id="emptyFieldNom" styleClass="errorEmptyField">Champ vide</Label>
            <StackPane fx:id="nomLayout">
                <Label fx:id="nomLabel" styleClass="fieldLabelpop" text="Nom"/>
                <JFXTextField fx:id="nomInput" styleClass="labelInput1"/>
                <TextField fx:id="emptyNomInput" styleClass="emptyInputpop" promptText="Nom" onMouseClicked="#fieldNom"
                           onKeyPressed="#fieldNom"/>
            </StackPane>
        </VBox>
        <Label fx:id="msg"/>
        <HBox fx:id="buttons">
            <JFXButton fx:id="annuler" styleClass="poppupButton" onMouseClicked="#annul"/>
            <JFXButton fx:id="save" styleClass="poppupButton" onMouseClicked="#saveButton"/>
        </HBox>
    </VBox>

</fx:root>
