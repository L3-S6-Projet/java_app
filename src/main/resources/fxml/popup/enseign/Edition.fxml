<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import jscolendar.components.popup.enseign.Edition?>
<fx:root xmlns:fx="http://javafx.com/fxml"
         xmlns="http://javafx.com/javafx"
         type="jscolendar.components.popup.enseign.Edition" stylesheets="stylesPoppup.css">
    <VBox fx:id="body">
        <Label fx:id="title" text="Edition" styleClass="poppupTitle"/>
        <VBox fx:id="salle" styleClass="backgroundGray">
            <Label fx:id="salleLabel" text="Salle" styleClass="popopMenuLabel"/>
            <JFXComboBox fx:id="salleList" promptText="Salle" styleClass="popupMenuField">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <Label text="Salle 1"/>
                        <Label text="Salle 2"/>
                    </FXCollections>
                </items>
            </JFXComboBox>
        </VBox>
        <Label/>
        <VBox fx:id="classe" styleClass="backgroundGray">
            <Label fx:id="classeLabel" text="Classe" styleClass="popopMenuLabel"/>
            <JFXComboBox fx:id="classeList" promptText="Classe" styleClass="popupMenuField">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <Label text="Classe 1"/>
                        <Label text="Classe 2"/>
                    </FXCollections>
                </items>
            </JFXComboBox>
        </VBox>
        <Label/>
        <VBox fx:id="effectif" styleClass="backgroundGray">
            <Label fx:id="effectifLabel" text="Effectif" styleClass="popopMenuLabel"/>
            <JFXComboBox fx:id="effectifList" promptText="Effectif" styleClass="popupMenuField">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <Label text="Effectif 1"/>
                        <Label text="Effectif 2"/>
                    </FXCollections>
                </items>
            </JFXComboBox>
        </VBox>
        <Label/>
        <VBox fx:id="duration">
            <Label fx:id="wrongDurationMessage" text="Champ vide ou incorrect" styleClass="errorEmptyField"/>
            <StackPane fx:id="durationLayout" styleClass="popupStack">
                <Label fx:id="durationLabel" text="Durée (en minutes)" styleClass="popopMenuLabel"/>
                <JFXTextField fx:id="durationInput" promptText="Durée" onMouseClicked="#onDuration"
                              onKeyPressed="#onDuration" styleClass="popupInputField"/>
                <TextField fx:id="emptyDurationInput" promptText="Durée" onMouseClicked="#onDuration"
                           onKeyPressed="#onDuration" styleClass="popupEmptyInputField"/>
            </StackPane>
        </VBox>
        <Label/>
        <VBox fx:id="date">
            <Label fx:id="wrongDateMessage" text="Champ vide ou incorrect" styleClass="errorEmptyField"/>
            <StackPane fx:id="dateLayout" styleClass="popupStack">
                <Label fx:id="dateLabel" text="Date et Heure" styleClass="popopMenuLabel"/>
                <JFXTextField fx:id="dateInput" promptText="Date et Heure" onMouseClicked="#onDate"
                              onKeyPressed="#onDate" styleClass="popupInputField"/>
                <TextField fx:id="emptyDateInput" promptText="Date et Heure" onMouseClicked="#onDate"
                           onKeyPressed="#onDate" styleClass="popupEmptyInputField"/>
            </StackPane>

        </VBox>
        <Label/>
        <HBox fx:id="buttons">
            <JFXButton fx:id="annuler" text="ANNULER" styleClass="poppupButton" onMouseClicked="#annul"/>
            <JFXButton fx:id="save" text="SAUVER" styleClass="poppupButton" onMouseClicked="#saveButton"/>
        </HBox>
    </VBox>

</fx:root>
