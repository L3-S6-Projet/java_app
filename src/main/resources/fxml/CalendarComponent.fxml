<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.collections.FXCollections?>
<?import com.calendarfx.view.CalendarView?>
<?import com.jfoenix.controls.JFXButton?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<fx:root xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" VBox.vgrow="ALWAYS"
      styleClass="calendar-outer" stylesheets="calendar.css"
      type="jscolendar.components.Calendar" spacing="4">

    <HBox styleClass="calendar-header" alignment="CENTER">
        <JFXButton fx:id="back" onAction="#goBack">
            <graphic>
                <FontIcon iconLiteral="mdi-chevron-left" iconSize="24"/>
            </graphic>
        </JFXButton>
        <Label text="Aujourd'hui" />
        <JFXButton fx:id="forward" onAction="#goForward">
             <graphic>
                 <FontIcon iconLiteral="mdi-chevron-right" iconSize="24"/>
             </graphic>
        </JFXButton>


        <VBox HBox.hgrow="ALWAYS" alignment="CENTER">
        <Label fx:id="test" text="TEST" alignment="CENTER"/>
        </VBox>
        <JFXComboBox fx:id="select">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <Label id="day" text="Jour" />
                    <Label id="week" text="Semaine"/>
                    <Label id="month" text="Mois" />
                </FXCollections>
            </items>
        </JFXComboBox>
    </HBox>
</fx:root>
