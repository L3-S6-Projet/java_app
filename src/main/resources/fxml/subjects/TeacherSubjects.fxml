<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import jscolendar.routes.subjects.TeacherSubjects?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<fx:root xmlns:fx="http://javafx.com/fxml"
         xmlns="http://javafx.com/javafx"
         type="jscolendar.routes.subjects.TeacherSubjects">

    <HBox>
        <JFXButton onAction="#returnToPrevView">
            <graphic>
                <FontIcon iconLiteral="mdi-arrow-left"/>
            </graphic>
        </JFXButton>
        <Label fx:id="title"/>
        <JFXButton>
            <graphic>
                <FontIcon iconLiteral="mdi-calendar-blank"/>
            </graphic>
        </JFXButton>
    </HBox>
    <VBox>
        <Label text="%calendar.title.information"/>
        <JFXListView fx:id="infoContent">
            <HBox>
                <VBox>
                    <Label fx:id="name"/>
                    <Label text="%calendar.details.name"/>
                </VBox>
            </HBox>
            <VBox>
                <Label fx:id="promo"/>
                <Label text="%calendar.details.promo"/>
            </VBox>
        </JFXListView>
    </VBox>
    <HBox>
        <VBox>
            <Label text="%sidebar.teachers"/>
            <JFXListView fx:id="enseigContent"/>
        </VBox>
        <VBox>
            <Label text="%title.group"/>
            <JFXListView fx:id="groupContent"/>
        </VBox>
    </HBox>

</fx:root>
