<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXTabPane?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.*?>
<?import jscolendar.routes.subjects.SubjectDetails?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" type="jscolendar.routes.subjects.SubjectDetails"
         xmlns="http://javafx.com/javafx/10.0.2-internal">

    <VBox fx:id="all" style="-fx-background-color: #FAfAFA">
        <GridPane>
            <HBox fx:id="header" prefHeight="${all.height}" prefWidth="${all.width}" GridPane.rowIndex="0">
                <GridPane>
                    <HBox prefHeight="${header.height}" prefWidth="${header.width}" style="-fx-alignment: center-left"
                          GridPane.columnIndex="0">
                        <JFXButton onAction="#returnToPrevView">
                            <graphic>
                                <FontIcon iconLiteral="mdi-arrow-left"/>
                            </graphic>
                        </JFXButton>
                        <Label fx:id="title"/>
                    </HBox>
                    <HBox prefHeight="${header.height}" prefWidth="${header.width}" style="-fx-alignment: center-right"
                          GridPane.columnIndex="1">
                        <JFXComboBox fx:id="select">                            <items>
                                <FXCollections fx:factory="observableArrayList">
                                    <Label text="%calendar.type.day" id="day"/>
                                    <Label text="%calendar.type.week" id="week"/>
                                    <Label text="%calendar.type.month" id="month"/>
                                </FXCollections>
                            </items>
                        </JFXComboBox>
                        <JFXButton onAction="#editButton">
                            <graphic>
                                <FontIcon iconLiteral="mdi-border-color"/>
                            </graphic>
                        </JFXButton>
                    </HBox>
                    <rowConstraints>
                        <RowConstraints percentHeight="100" vgrow="ALWAYS"/>
                    </rowConstraints>
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
                    </columnConstraints>
                </GridPane>
            </HBox>

            <HBox fx:id="body" prefHeight="${all.height}" prefWidth="${all.width}" GridPane.rowIndex="1">
                <GridPane HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <VBox fx:id="subLeft" prefHeight="${body.height}" prefWidth="${body.width}" GridPane.columnIndex="0"
                          GridPane.rowIndex="0">
                        <VBox>
                            <Label text="%calendar.title.information"/>
                            <JFXTabPane fx:id="menu">
                                <tabs>
                                    <Tab text="%calendar.details.ue.menu.info">
                                        <content>
                                            <JFXListView fx:id="infoContent" prefHeight="${subLeft.height}">
                                                <HBox>
                                                    <VBox alignment="CENTER">
                                                        <FontIcon iconLiteral="mdi-account-circle"/>
                                                    </VBox>
                                                    <VBox>
                                                        <Label fx:id="name"/>
                                                        <Label text="%calendar.details.name"/>
                                                    </VBox>
                                                </HBox>
                                                <VBox>
                                                    <Label fx:id="promo"/>
                                                    <Label text="%calendar.details.promo"/>
                                                </VBox>
                                                <VBox>
                                                    <Label text="%calendar.details.services"/>
                                                    <Label fx:id="services"/>
                                                </VBox>
                                            </JFXListView>
                                        </content>
                                    </Tab>
                                    <Tab fx:id="menuEnseig" text="%calendar.details.ue.menu.teacher">
                                        <content>

                                        </content>
                                    </Tab>
                                    <Tab fx:id="menuGroup" text="%calendar.details.ue.menu.group">
                                        <content>

                                        </content>
                                    </Tab>
                                </tabs>
                            </JFXTabPane>

                        </VBox>

                    </VBox>
                    <VBox fx:id="calendar" prefHeight="${body.height}" prefWidth="${body.width}"
                          GridPane.columnIndex="1"
                          GridPane.rowIndex="0">
                    </VBox>
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="20.0"/>
                        <ColumnConstraints hgrow="ALWAYS" percentWidth="80.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints percentHeight="100" vgrow="ALWAYS"/>
                    </rowConstraints>
                </GridPane>
            </HBox>

            <rowConstraints>
                <RowConstraints percentHeight="10" vgrow="ALWAYS"/>
                <RowConstraints percentHeight="90" vgrow="ALWAYS"/>
            </rowConstraints>
            <columnConstraints>
                <ColumnConstraints/>
            </columnConstraints>
        </GridPane>
    </VBox>

</fx:root>
