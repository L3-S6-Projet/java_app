<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXListView?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import jscolendar.components.TeacherDetails?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<fx:root xmlns:fx="http://javafx.com/fxml"
         xmlns="http://javafx.com/javafx"
         type="jscolendar.components.TeacherDetails">

    <VBox GridPane.columnIndex="0" style="-fx-background-color: greenyellow">
        <GridPane VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
            <HBox id="header" GridPane.rowIndex="0" style="-fx-border-color: purple">
                <JFXButton fx:id="returnButton" onAction="#returnToPrevView">
                    <graphic>
                        <FontIcon iconLiteral="mdi-arrow-left"/>
                    </graphic>
                </JFXButton>
                <Label fx:id="title"/>
                <JFXComboBox fx:id="select" onAction="#selectCalendarType">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <Label text="%calendar.type.day"/>
                            <Label text="%calendar.type.week"/>
                            <Label text="%calendar.type.month"/>
                        </FXCollections>
                    </items>
                </JFXComboBox>
                <FontIcon iconLiteral="mdi-border-color"/>
            </HBox>
            <HBox GridPane.rowIndex="1" style="-fx-border-color: red">
                <VBox fx:id="subLeft" GridPane.columnIndex="0">
                    <VBox fx:id="info">
                        <Label text="%calendar.title.information"/>
                        <JFXListView fx:id="infoContent" maxHeight="Infinity">
                            <HBox>
                                <FontIcon iconLiteral="mdi-account-circle"/>
                                <VBox>
                                    <Label fx:id="name"/>
                                    <Label text="%calendar.details.name"/>
                                </VBox>
                            </HBox>
                            <VBox>
                                <Label fx:id="userName"/>
                                <Label text="%calendar.details.username"/>
                        </VBox>
                        <HBox>
                            <FontIcon iconLiteral="mdi-email"/>
                            <VBox>
                                <Label fx:id="email"/>
                                <Label text="%calendar.details.email"/>
                            </VBox>
                        </HBox>
                        <HBox>
                            <FontIcon iconLiteral="mdi-phone"/>
                            <VBox>
                                <Label fx:id="phoneNumber"/>
                                <Label text="%calendar.details.phone"/>
                            </VBox>
                        </HBox>
                            <VBox>
                                <Label fx:id="teacher"/>
                                <Label text="%calendar.details.teacher"/>
                            </VBox>
                            <Label text="%calendar.details.services"/>
                        </JFXListView>
                    </VBox>
                </VBox>
                <VBox id="calendar" GridPane.columnIndex="1" style="-fx-border-color: blue; -fx-pref-width: 400px;"/>
            </HBox>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="30"/>
                <ColumnConstraints hgrow="ALWAYS" percentWidth="70"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS" percentHeight="20"/>
                <RowConstraints vgrow="ALWAYS" percentHeight="80"/>
            </rowConstraints>
        </GridPane>
    </VBox>
</fx:root>


