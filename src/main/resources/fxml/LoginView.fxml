<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import jscolendar.components.Login?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" stylesheets="styles.css" type="jscolendar.components.Login"
         xmlns="http://javafx.com/javafx/10.0.2-internal">

    <HBox fx:id="body" styleClass="body">
        <VBox fx:id="left" styleClass="left">
            <Label fx:id="title" styleClass="title">Scolendar</Label>
            <Label fx:id="subtitle" styleClass="subtitle">Server AMU</Label>

            <VBox fx:id="userInputs">
                <Label fx:id="wrongLoginMessage" styleClass="wrongLoginMessage">
                    Nom d'utilisateur et/ou mot de passe non valide.
                </Label>
                <StackPane fx:id="idLayout">
                    <Label styleClass="LabelId" fx:id="idLabel">Nom d'utilisateur*</Label>
                    <JFXTextField fx:id="idInput" styleClass="fieldLabel" onMouseClicked="#showIdLabel"
                                  onKeyPressed="#showIdLabel"/>
                    <TextField fx:id="emptyIdInput" promptText="Nom d'utilisateur" styleClass="emptyInput"
                               onMouseClicked="#showIdLabel" onKeyPressed="#showIdLabel"/>
                </StackPane>
                <StackPane fx:id="PWDLayout">
                    <Label styleClass="LabelId" fx:id="passwordLabel">Mot de passe*</Label>
                    <JFXPasswordField fx:id="PWDInput" styleClass="fieldLabel" onKeyPressed="#showPasswordLabel"
                                      onMouseClicked="#showPasswordLabel"/>
                    <JFXTextField fx:id="PWDShowInput" styleClass="fieldLabel"/>
                    <TextField fx:id="emptyPWDInput" promptText="Mot de passe" styleClass="emptyInput"
                               onMouseClicked="#showPasswordLabel" onKeyPressed="#showPasswordLabel"/>
                    <Button
                            styleClass="showButton" fx:id="show" onAction="#showMDP">
                    </Button>
                </StackPane>
            </VBox>
            <HBox fx:id="connectItems">
                <Button fx:id="connexion" styleClass="button1">connexion</Button>
                <VBox>
                    <Label fx:id="linkForgotPWD" styleClass="Oubli" onMouseClicked="#forgotPassword">Mot de passe
                        oublié?
                    </Label>
                </VBox>
            </HBox>
            <VBox fx:id="copyRightItems">
                <HBox>
                    <Text fx:id="copyRight" styleClass="copyRight" text="En vous connectant, vous aceptez les "/>
                    <Text fx:id="linkCopyRight" styleClass="copyRight" underline="true" text="termes et conditions."
                          onMouseClicked="#conditions"/>
                </HBox>
                <Text styleClass="copyRight">©Scolendar 2020 - Tout droits réservés</Text>
            </VBox>
        </VBox>
        <VBox fx:id="rigth" styleClass="right"/>
    </HBox>
</fx:root>
