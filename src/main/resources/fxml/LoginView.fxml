<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import jscolendar.components.Login?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" stylesheets="styles.css" type="jscolendar.components.Login"
         xmlns="http://javafx.com/javafx/10.0.2-internal">


    <HBox fx:id="body" styleClass="body">
        <VBox>
            <VBox fx:id="left" styleClass="left">
                <Label fx:id="title" styleClass="title">Scolendar</Label>
                <Label fx:id="subtitle" styleClass="subtitle">Server AMU</Label>

                <VBox fx:id="field">
                    <VBox styleClass="field">
                        <Label styleClass="LabelId" fx:id="idLabel" onKeyPressed="#showIdLabel"
                               onMouseClicked="#showIdLabel">Nom d'utilisateur*
                        </Label>
                        <JFXTextField fx:id="id" styleClass="fieldLabel" promptText="Nom d'utilisateur"/>
                    </VBox>
                    <Text/>

                    <VBox styleClass="field">
                        <Label styleClass="LabelId" fx:id="passwordLabel" onKeyPressed="#showIdLabel"
                               onMouseClicked="#showPasswordLabel">Mot de passe*
                        </Label>
                        <HBox>
                            <JFXPasswordField fx:id="password" styleClass="fieldLabel"
                                              promptText="Mot de passe"/>
                            <Button styleClass="showButton" fx:id="show" onAction="#showMDP"/>
                        </HBox>
                    </VBox>
                </VBox>
                <Text/>
                <HBox>
                    <Button fx:id="connexion" styleClass="button1" onAction="#connexion">connexion</Button>
                    <VBox prefHeight="50">
                        <Label fx:id="linkForgotPWD" styleClass="Oubli" onMouseClicked="#forgotPassword">Mot de passe
                            oublié?
                        </Label>
                    </VBox>

                </HBox>

            </VBox>
            <HBox>
                <Text fx:id="copyRight" styleClass="copyRight" text="En vous connectant, vous aceptez les "/>
                <Text fx:id="linkCopyRight" styleClass="copyRight" underline="true" text="termes et conditions."
                      onMouseClicked="#conditions"/>
            </HBox>
            <Text styleClass="copyRight">©Scolendar 2020 - Tout droits réservés</Text>
        </VBox>
    </HBox>

    <!--

    -->

</fx:root>
