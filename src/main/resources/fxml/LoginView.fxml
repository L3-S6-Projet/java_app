<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import jscolendar.components.Login?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" stylesheets="styles.css" type="jscolendar.components.Login"
         xmlns="http://javafx.com/javafx/10.0.2-internal">


    <HBox fx:id="body" styleClass="body">
        <VBox>
            <VBox fx:id="left" styleClass="left">
                <Label fx:id="title" styleClass="title">Scolendar</Label>
                <Label fx:id="subtitle" styleClass="subtitle">Server AMU</Label>

                <VBox fx:id="field">

                    <VBox styleClass="field">
                        <JFXTextField fx:id="id" styleClass="fieldLabel" promptText="Nom d'utilisateur"></JFXTextField>
                    </VBox>
                    <Text/>

                    <VBox styleClass="field">
                        <HBox>
                            <JFXTextField fx:id="password" styleClass="fieldLabel"
                                          promptText="Mot de passe"></JFXTextField>
                            <Button styleClass="showButton"/>
                        </HBox>
                    </VBox>
                </VBox>
                <Text/>
                <HBox>
                    <Button fx:id="connexion" styleClass="button1">connexion</Button>
                    <VBox prefHeight="50">
                        <Text styleClass="copyRight" textOrigin="CENTER" boundsType="LOGICAL_VERTICAL_CENTER">Mot de
                            passe oublié?
                        </Text>
                    </VBox>

                </HBox>

            </VBox>
            <Text fx:id="copyRight" styleClass="copyRight">En vous connectant, vous aceptez les termes et conditions.
            </Text>
            <Text styleClass="copyRight">©Scolendar 2020 - Tout droits réservés</Text>
        </VBox>
    </HBox>

    <!--
        <Label styleClass="LabelId">Nom d'utilisateur*</Label>
        <Label styleClass="LabelId">Mot de passe*</Label>
    -->

</fx:root>
